<h1><%= @post.title%>'s details</h1>
<div class= "card">
<div class= "head-post">
   <h2><%= @post.title %> by <%=@user.name%></h2>
   <div class="like-com">
     <p>Likes: <%= @post.likes.count %></p>
     <p>Comments: <%= @comments.count %></p>
   </div>
</div>
<p><%= @post.text %></p>
 

  <ul>
    <% @comments.each do |comment| %>
      <li>
        <strong><%= comment.author.name %>:</strong> <%= comment.text %>
      </li>
    <% end %>
  </ul>
</div>
