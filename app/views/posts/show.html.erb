<h1><%= @post.title %> details</h1>
<div class="card">
  <div class="head-post">
    <h2><%= @post.title %> by <%= @user.name %></h2>
    <div class="like-com">
      <p>Likes: <%= @likes_count %></p>
      <p>Comments: <%= @comments_count %></p>
    </div>
  </div>
  <p><%= @post.text %></p>

 <ul>
    <% @comments.each do |comment| %>
      <li>
        <strong><%= comment.author.name %>:</strong> <%= comment.text %>
        <% if can?(:destroy, comment) %>
          <%= button_to 'Delete Comment', user_post_comment_path(@user, @post, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, class: 'button' %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<div class="butt-cont">
  <%= link_to 'Create Comment', new_user_post_comment_path(params[:user_id], params[:id]), class: 'button' %>
  <%= button_to 'Like Post',  user_post_likes_path(params[:user_id], @post), method: :post ,class: 'button'%>
  <% if can?(:destroy, @post) %>
    <%= button_to 'Delete Post', user_post_path(@user, @post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'button' %>
  <% end %>
</div>
