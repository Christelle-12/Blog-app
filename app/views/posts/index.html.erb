<div>
  <img src="<%= @user.photo %>" alt="individual user photo">
  <div>
    <h3><%= @user.name %></h3>
    <p>Number of posts: <%= @user.posts_counter || 0 %></p>
  </div>
</div>

<div>
  <% @posts.each do |post| %>
    <%= link_to user_post_path(user_id: @user.id, id: post.id) do %>
      <h2><%= post.title %></h2>
    <% end %>
    <p><%= post.text %></p>
    <p>Likes: <%= post.likes.count %></p>
    <p>Comments: <%= post.comments.count %></p>
    <ul>
      <% post.comments.each do |comment| %>
        <li><%= comment.text %></li>
      <% end %>
    </ul>
  <% end %>
  <button>pagination</button>
</div>
