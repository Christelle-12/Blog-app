<div>
  <img src="<%= @user.photo %>" alt="individual user photo">
  <div>
    <h3><%= @user.name %></h3>
    <p>Number of posts: <%= @user.posts_counter || 0 %></p>
  </div>
  <div>
    <p><%= @user.bio %></p>
  </div>
</div>

<div>
  <% @posts.each do |post| %>
    <h2><%= post.title %></h2>
    <p><%= post.text %></p>
  <% end %>
</div>
<%= link_to "See all posts", user_posts_path(@user) %>
